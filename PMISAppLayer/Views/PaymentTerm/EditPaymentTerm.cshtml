@using PMISBLayer.Entities
@using PMISAppLayer.DTOs
@model PaymentTerm
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="basic-form">

                        <form action="/PaymentTerm/UpdatePaymentTerm?paymentTermId=@Model.PaymentTermId&deliverableId=@ViewBag.deliverableId" method="post">
                            <div class="form-group">
                                <label>Payment Term Title</label>
                                <input class="form-control" asp-for="PaymentTermTitle" />
                                <span class="text-danger" asp-validation-for="PaymentTermTitle"></span>
                            </div>
                            <div class="form-group">
                                <label>Payment Term Amount</label>
                                <input class="form-control" asp-for="PaymentTermAmount" />
                                <span class="text-danger" asp-validation-for="PaymentTermAmount"></span>
                                @if (ViewBag.Message != null)
                                {
                                    <span class="text-danger">@ViewBag.Message</span>
                                }
                            </div>
                            <input class="form-control btn-success" style="width:20%; position:relative; left:40%" type="submit" value="Save Changes" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>