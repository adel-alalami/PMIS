@using Core.DTOs
@model InsertProjectUserDTO

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="basic-form">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label>Email</label>
                                <input class="form-control" asp-for="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group col-md-6 col-sm-12">
                                <label>Email</label>
                                <select class="form-control" asp-for="RoleName">
                                    <option value="Admin">Admin</option>
                                    <option value="ProjectManager">Project Manager</option>
                                </select>
                                <span class="text-danger" asp-validation-for="RoleName"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label>Password</label>
                                <input class="form-control" asp-for="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group col-md-6 col-sm-12">
                                <label>Password</label>
                                <input class="form-control" asp-for="ConfirmPassword" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="form-group d-flex justify-content-center"><input type="submit" value="Create" class="btn btn-primary"> </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

