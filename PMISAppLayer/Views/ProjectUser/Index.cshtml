@using PMISAppLayer.DTOs
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-outline-secondary d-inline-block mb-2" href="/Client/Create"><i class="fa-solid fa-plus"></i> New User</a>
                    </div>                    <table id="table_id" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var x = 0;
                                foreach (var user in (List<InsertProjectUserDTO>)ViewBag.Users)
                                {
                                    x++;
                                    <tr>
                                        <th scope="row">@x</th>
                                        <td>@user.Email</td>
                                        <td>@user.RoleName</td>
                                        <td style="text-align:center">
                                            <a class="text-danger" href="/ProjectUser/Delete?id=@user.Id"><i class="fa-solid fa-trash ml-sm-3"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}

