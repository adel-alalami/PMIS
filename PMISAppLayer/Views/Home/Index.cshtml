<h5 class="mt-3">Projects</h5>
<div class="row">
    <div class="col-lg-3">
        <div class="card">
            <div class="stat-widget-one">
                <div class="stat-icon dib text-primary">
                    <i class="fa-solid fa-hashtag"></i>
                </div>
                <div class="stat-content dib">
                    <div class="stat-text">Total Projects</div>
                    <div class="stat-digit">@ViewBag.projectCount</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="stat-widget-one">
                <div class="stat-icon dib text-success"><i class="fa-solid fa-circle-check"></i></div>
                <div class="stat-content dib">
                    <div class="stat-text">Completed</div>
                    <div class="stat-digit">@ViewBag.completedCount</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="stat-widget-one">
                <div class="stat-icon dib text-secondary">
                    <i class="fa-solid fa-circle-pause"></i>
                </div>
                <div class="stat-content dib">
                    <div class="stat-text">Pending</div>
                    <div class="stat-digit">@ViewBag.pendingCount</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="stat-widget-one">
                <div class="stat-icon dib text-info">
                    <i class="fa-solid fa-chart-line"></i>
                </div>
                <div class="stat-content dib">
                    <div class="stat-text">Active Projects</div>
                    <div class="stat-digit">@ViewBag.activeCount</div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
