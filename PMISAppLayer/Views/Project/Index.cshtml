@using PMISBLayer.Entities;

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="d-flex justify-content-center">
                    <a class="btn btn-outline-secondary d-inline-block mb-2" href="/Project/CreateNewProject"><i class="fa-solid fa-plus"></i> New Project</a>
                    </div>
                    <table id="table_id" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Contract Amount</th>
                                <th>Status</th>
                                <th>Phases</th>
                                <th>Contract</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var x = 0;
                                foreach (var project in (List<Project>)ViewBag.Projects)
                                {
                                    x++;
                                    <tr>
                                        <th scope="row">@x</th>
                                        <td>@project.ProjectName</td>
                                        <td>@project.ProjectType.ProjectTypeName</td>
                                        <td>@project.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>@project.EndDate.ToString("dd/MM/yyyy")</td>
                                        <td>@project.ContractAmount</td>
                                        <td>@project.ProjectStatus.ProjectStatusName</td>
                                        <td><a href="/Phase/Index?projectId=@project.ProjectId">View</a></td>
                                        <td><a target="_blank" href="/Project/ViewContract?projectId=@project.ProjectId">View</a></td>
                                        <td style="text-align:center">
                                            <a class="text-success" href="/Project/EditProject?projectId=@project.ProjectId"><i class="fa-solid fa-pen-to-square mr-1"></i></a>|
                                            <a class="text-danger" href="/Project/RemoveProject?projectId=@project.ProjectId"><i class="fa-solid fa-trash ml-1"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}


