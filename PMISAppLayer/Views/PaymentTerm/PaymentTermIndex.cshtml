@using Core.Entities
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @*<div class="card-header">
                <div>
                    <span><b>Deliverable Name :</b> @ViewBag.Deliverable.DeliverableName</span>
                </div>
                <div>
                    <span><b>Deliverable Start Date :</b> @ViewBag.Deliverable.StartDate.ToString("dd/MM/yyyy")</span>
                </div>
                <div>
                    <span><b>Deliverable End Date :</b> @ViewBag.Deliverable.EndDate.ToString("dd/MM/yyyy")</span>
                </div>
            </div>*@
            <div class="card-body">
                <div class="table-responsive">
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-outline-secondary  d-inline-block mb-2" href="/PaymentTerm/CreateNewPaymentTerm?deliverableId=@ViewBag.DeliverableId"><i class="fa-solid fa-plus"></i> New Payment Term</a>
                    </div>
                    <table id="table_id" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tiltle</th>
                                <th>Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var x = 0;
                                foreach (var pt in (List<PaymentTerm>)ViewBag.PaymentTerms)
                                {
                                    x++;
                                    <tr>
                                        <th scope="row">@x</th>
                                        <td>@pt.PaymentTermTitle</td>
                                        <td>@pt.PaymentTermAmount</td>
                                        <td style="text-align:center">
                                            <a class="text-success" href="/PaymentTerm/EditPaymentTerm?paymentTermId=@pt.PaymentTermId"><i class="fa-solid fa-pen-to-square mr-sm-3"></i></a>|
                                            <a class="text-danger" href="/PaymentTerm/RemovePaymentTerm?paymentTermId=@pt.PaymentTermId&deliverableId=@pt.DeliverableId"><i class="fa-solid fa-trash ml-sm-3"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}