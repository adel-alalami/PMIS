@model IEnumerable<PMISBLayer.Entities.Client>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-secondary d-inline-block mb-2" href="/Client/Create"><i class="fa-solid fa-plus"></i> New Client</a>
                        </div>
                        <table class="table table-hover table-bordered" id="table_id">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientEmail)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientStreetAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientCity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientPhoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClientFax)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var x = 0;
                                    foreach (var item in Model)
                                    {
                                        x++;
                                        <tr>
                                            <th scope="row">@x</th>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientStreetAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientCity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientPhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClientFax)
                                            </td>
                                            <td>
                                                <a class="text-success" asp-action="Edit" asp-route-id="@item.ClientId"><i class="fa-solid fa-pen-to-square mr-sm-3"></i></a> |
                                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.ClientId"><i class="fa-solid fa-trash ml-sm-3"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts {
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#table_id').DataTable();
            });
        </script>

    }
