@model Core.Entities.Client

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="basic-form">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientName" class="control-label"></label>
                                <input asp-for="ClientName" class="form-control" />
                                <span asp-validation-for="ClientName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientEmail" class="control-label"></label>
                                <input asp-for="ClientEmail" class="form-control" />
                                <span asp-validation-for="ClientEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientStreetAddress" class="control-label"></label>
                                <input asp-for="ClientStreetAddress" class="form-control" />
                                <span asp-validation-for="ClientStreetAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientCity" class="control-label"></label>
                                <input asp-for="ClientCity" class="form-control" />
                                <span asp-validation-for="ClientCity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientPhoneNumber" class="control-label"></label>
                                <input asp-for="ClientPhoneNumber" class="form-control" />
                                <span asp-validation-for="ClientPhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6 col-sm-12">
                                <label asp-for="ClientFax" class="control-label"></label>
                                <input asp-for="ClientFax" class="form-control" />
                                <span asp-validation-for="ClientFax" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
